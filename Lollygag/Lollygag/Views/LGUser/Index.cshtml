
@{
    Layout = null;
}

<!DOCTYPE html>
<!-- saved from url=(0043)https://semantic-ui.com/examples/login.html -->
<html class="gr__semantic-ui_com">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Standard Meta -->

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <!-- Site Properties -->
    <title>Login Example - Semantic</title>
    <link rel="stylesheet" type="text/css" href="~/loginresources/reset.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/site.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/container.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/grid.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/header.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/image.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/menu.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/divider.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/segment.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/form.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/input.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/button.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/list.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/message.css">
    <link rel="stylesheet" type="text/css" href="~/loginresources/icon.css">
    <script src="~/loginresources/jquery.min.js.download"></script>
    <script src="~/loginresources/form.js.download"></script>
    <script src="~/loginresources/transition.js.download"></script>
    <style type="text/css">

        body {
            background-color: #DADADA;
        }

            body > .grid {
                height: 100%;
            }

        .image {
            margin-top: -100px;
        }

        .column {
            max-width: 450px;
        }
    </style>
    <script>$(document)
    .ready(function() {
      $('.ui.form')
        .form({
          fields: {
            email: {
              identifier  : 'email',
              rules: [
                {
                  type   : 'empty',
                  prompt : 'Please enter your e-mail'
                },
                {
                  type   : 'email',
                  prompt : 'Please enter a valid e-mail'
                }
              ]
            },
            password: {
              identifier  : 'password',
              rules: [
                {
                  type   : 'empty',
                  prompt : 'Please enter your password'
                },
                {
                  type   : 'length[6]',
                  prompt : 'Your password must be at least 6 characters'
                }
              ]
            }
          }
        })
      ;
    })
  ;</script>
</head>
<body data-gr-c-s-loaded="true">
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h2 >
                <img src="~/images/Lollygag.PNG" class="image">
                <div class="content">
                    Log-in to your account
                </div>
            </h2>
            <form class="ui large form">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="email" placeholder="E-mail address">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="password" placeholder="Password">
                        </div>
                    </div>
                    <button value="Login" type="submit" >Login</button>
                </div>
                <div class="ui error message"></div>
            </form>
            <div class="ui message">
                New to us? <a href="https://semantic-ui.com/examples/login.html#">Register</a>
            </div>
        </div>
    </div>


</body>
</html>
