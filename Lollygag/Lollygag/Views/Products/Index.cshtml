@model IEnumerable<Lollygag.Models.Product>

@{
  ViewData["Title"] = "Marketplace Products";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h3>Marketplace Products</h3>
      <hr />
    </div>
  </div>

  <div class="row">

    @foreach (var item in Model)
    {
      <div class="col-md-3">
        <div class="product">
          <div>
            <img src="~/images/@Html.DisplayFor(modelItem => item.LogoUrl)"
                 title="@Html.DisplayFor(modelItem => item.Name):  @Html.DisplayFor(modelItem => item.Description)" />
          </div>
          <div><button class="btn btn-default">Learn More</button></div>


        </div>
      </div>
    }


